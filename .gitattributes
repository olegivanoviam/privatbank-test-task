# Ensure shell scripts use LF line endings
*.sh text eol=lf

# Ensure SQL files use LF line endings  
*.sql text eol=lf

# Ensure batch files use CRLF line endings
*.bat text eol=crlf

# Ensure other text files use LF line endings
*.md text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
